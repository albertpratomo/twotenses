---
import {storyblokEditable} from '@storyblok/astro';
import {getSrcset} from '@/utils';

const {blok, image1, image2} = Astro.props;
---

<section
    {...storyblokEditable(blok)}
    class="bg-gray"
>
    <div class="container-fluid grid grid-cols-12 gap-y-8 py-4 md:gap-y-12 md:py-6 xl:pb-24 xl:pt-48">
        <div class="col-span-full md:col-span-6 xl:col-span-3">
            <picture>
                <source
                    media="(max-width: 639px)"
                    srcset={getSrcset(image1, 639)}
                    width="639"
                />

                <source
                    media="(max-width: 767px)"
                    srcset={getSrcset(image1, 384)}
                    width="384"
                />

                <img
                    alt={image1.alt}
                    loading="lazy"
                    srcset={getSrcset(image1, 480)}
                    title={image1.title}
                    width="480"
                />
            </picture>
        </div>

        <div class="col-span-full md:col-span-9 md:col-end-13 xl:col-span-6 xl:col-end-13">
            <picture>
                <source
                    media="(max-width: 639px)"
                    srcset={getSrcset(image2, 639)}
                    width="639"
                />

                <source
                    media="(max-width: 767px)"
                    srcset={getSrcset(image2, 576)}
                    width="576"
                />

                <img
                    alt={image2.alt}
                    loading="lazy"
                    srcset={getSrcset(image2, 960)}
                    title={image2.title}
                    width="960"
                    class="ml-auto"
                />
            </picture>
        </div>
    </div>
</section>
