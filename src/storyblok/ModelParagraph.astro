---
import {storyblokEditable} from '@storyblok/astro';
import {ModelGltf} from 'vue-3d-model';

const {blok, model, paragraph} = Astro.props;

const controlsOptions = {
    maxPolarAngle: 1.2,
    minPolarAngle: 1.2,
};
---

<section
    {...storyblokEditable(blok)}
    class="border-b border-red bg-gray"
>
    <div class="container-fluid px-container grid items-center gap-y-4 p-6 md:py-12 lg:grid-cols-2 lg:py-36">
        <div class="lg:h-[70vh]">
            <ModelGltf
                background-alpha={0}
                client:visible
                src={model.filename}
                controls-options={controlsOptions}
            />
        </div>

        <div class="lg:pl-12">
            <p class="text-lg lg:max-w-xl xl:text-2xl">
                {paragraph}
            </p>
        </div>
    </div>
</section>
