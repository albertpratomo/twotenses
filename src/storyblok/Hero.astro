---
import {storyblokEditable} from '@storyblok/astro';
import Twotenses from '@/components/Twotenses.astro';
import IInstagram from '@/components/icons/IInstagram.astro';
import IWhatsapp from '@/components/icons/IWhatsapp.astro';
import settings from '@/store/settings';

const {blok, texts} = Astro.props;

const {contact_instagram, contact_whatsapp} = settings;
---

<section
    {...storyblokEditable(blok)}
    class="bg-black text-red"
>
    <div class="container-fluid flex min-h-screen flex-col py-8">
        <div class="mt-auto">
            <Twotenses />
        </div>

        <div class="mt-auto flex flex-col justify-between gap-16 sm:flex-row sm:items-end">
            <div class="flex flex-col gap-4 sm:flex-row">
                {texts.map(text => (
                    <p class="md:max-w-xs lg:text-2xl">
                        {text.text}
                    </p>
                ))}
            </div>

            <div class="flex gap-4 sm:order-first">
                <a
                    href={contact_whatsapp.cached_url}
                    target="_blank"
                >
                    <IWhatsapp />
                </a>

                <a
                    href={contact_instagram.cached_url}
                    target="_blank"
                >
                    <IInstagram />
                </a>
            </div>
        </div>
    </div>
</section>
