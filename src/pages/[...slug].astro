---
import {useStoryblokApi} from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const version = import.meta.env.DEV ? 'draft' : 'published';

export async function getStaticPaths() {
    const api = useStoryblokApi();

    const {data: {links}} = await api.get('cdn/links', {version});

    const homePath = {params: {slug: undefined}};

    return Object.values(links)
        .map(link => ({params: {slug: link.slug}}))
        .concat(homePath);
}

async function getStaticProps({slug}) {
    const api = useStoryblokApi();

    const {data: {story}} = await api.get(`cdn/stories/${slug || 'home'}`, {version});

    return {
        story,
    };
}

const {story} = await getStaticProps(Astro.params);
---

<StoryblokComponent blok={story.content} />
